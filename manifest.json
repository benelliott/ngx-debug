{
    "name": "ngx-debug",
    "version": "0.1",
    "description": "Shortcuts for debugging Angular applications",
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "permissions": [
        "tabs", 
        "http://*/*",
        "https://*/*"
    ],
    "content_scripts": [{
        "matches": [
            "<all_urls>"
        ],
        "js": [
            "content-script.js"
        ],
        "run_at": "document_end"
    }],
    "icons": {
        "128": "logo.png",
        "256": "logo.png"
    },
    "manifest_version": 2
}